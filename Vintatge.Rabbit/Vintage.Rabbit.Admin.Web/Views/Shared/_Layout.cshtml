@using Vintage.Rabbit.Orders.Enums

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,400italic,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:300,200,100' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900' rel='stylesheet' type='text/css'>
    

    <link rel="stylesheet" href="/Content/less/site.less" type="text/css" charset="utf-8" />


        @Scripts.Render("~/bundles/modernizr")
    <!-- scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/scripts")
        @RenderSection("scripts", required: false)
    <script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>

</head>
<body>

    <div class="header">
        <h1>Vintage Rabbit</h1>

        <ul class="logged-in-member">
            <li class="dropdown profile_menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@{Html.RenderAction("LoggedInMember", "Membership");}<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>@Html.RouteLink("Logout", Routes.Membership.Logout)</li>
                </ul>
            </li>
        </ul>

    </div>

    <div class="float-container">

        <div class="sidebar left">
            <div class="sidebar-content left">
                <ul class="navigation">
                    <li>
                        <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl(Routes.Products.List)"><i class="fa fa-dollar"></i>Products</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl(Routes.Themes.Index)"><i class="fa fa-picture-o"></i>Themes</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl(Routes.Orders.Index, new { status = OrderStatus.Complete.ToString().ToLower() })"><i class="fa fa-pencil-square-o"></i>Orders</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl(Routes.Parties.Index)"><i class="fa fa-gift"></i>Parties</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-users"></i>Members</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl(Routes.Blog.Index)"><i class="fa fa-quote-left"></i>Blog</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl(Routes.LoyaltyCards.Index)"><i class="fa fa-star"></i>Loyalty Cards</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl(Routes.Cache.Index)"><i class="fa fa-cogs"></i>Cache</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="page-content">            
            @RenderBody()
        </div>

    </div>


</body>
</html>
