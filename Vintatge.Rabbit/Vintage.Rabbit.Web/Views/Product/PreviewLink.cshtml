@model Vintage.Rabbit.Web.Models.Products.ProductLinkViewModel

@if(Model.Type == Vintage.Rabbit.Common.Enums.ProductType.Buy)
{ 
    @Html.RouteLink(Model.Title, Routes.Buy.Product, new { categoryName = Model.Category.Name, name = Model.UrlTitle, productId = Model.Id }, new { })
}
@if(Model.Type == Vintage.Rabbit.Common.Enums.ProductType.Hire)
{
    <a class="right ajax-lightbox" href="@Url.RouteUrl(Routes.Hire.Preview, new { categoryName = Model.Category.Name, productId = Model.Id, name = Model.UrlTitle })">
        <i class="fa fa-search"></i>
        Preview
    </a>
}
                              
