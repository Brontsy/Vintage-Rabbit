@model IList<Vintage.Rabbit.Web.Models.Blogs.BlogViewModel>
@{
    ViewBag.Title = "Blog";
}



<div class="blog">

    <div class="row">
        <div class="col-8 blog-entries">
            @foreach (var blog in Model)
            {
                <div class="item">
                    <h2>@blog.Title</h2>
                <p class="msg">@Html.Raw(blog.Content)</p>
            </div>
            }
        </div>
        <div class="col-4 promos">

            <a href="@Url.RouteUrl(Routes.ContactUs)">
                <img src="/content/images/blog/contact-us.jpg" />
            </a>

            <a href="/hire/photo-booth">
                <img src="/content/images/blog/photobooth.jpg" />
            </a>

            @{Html.RenderAction("Categories", "Blog");}
              
          </div>
    </div>

</div>