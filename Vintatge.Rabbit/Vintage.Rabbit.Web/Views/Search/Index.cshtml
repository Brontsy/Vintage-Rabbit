@model Vintage.Rabbit.Web.Models.Products.ProductListViewModel

@{
    ViewBag.Title = "Search Results - Vintage Rabbit";
}



<div class="search-results">

    <h2>Search results</h2>

    @if(Model.Products.Any())
    { 
    <ul class="row product-list">
        @foreach (var product in Model.Products)
        {
            <li class="col-2">
                @{Html.RenderPartial("product-list-item", product);}
            </li>
        }
    </ul>
    }
    else
    {
        <p>Unfortunatly we could not find any results for your search.</p>
    }
</div>