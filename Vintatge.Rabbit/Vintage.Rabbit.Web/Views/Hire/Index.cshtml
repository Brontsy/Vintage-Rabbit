@model IList<Vintage.Rabbit.Web.Models.Hire.HireProductListItemViewModel>


<div class="hire-page">

    <ul class="row">
        @foreach (var product in Model)
        {
            <li class="col-2">
                <div class="product-list-item">
                    <img src="@product.Image.Url" width="100%" />
                    <h4>@Html.RouteLink(product.Title, Routes.Hire.Product, new { productId = product.Id, name = product.UrlTitle }, new { })</h4>
                    <div class="price">@product.Cost</div>
                    <div class="product-controls">
                        <a href="@Url.RouteUrl(Routes.Hire.Preview, new { productId = product.Id, name = product.UrlTitle })">
                            <i class="fa fa-search"></i>
                            Preview
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>


