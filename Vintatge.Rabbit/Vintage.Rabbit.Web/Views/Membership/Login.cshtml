@model Vintage.Rabbit.Web.Models.Membership.LoginViewModel


<h3>Already a member?</h3>


@using (Html.BeginRouteForm(Routes.Membership.Login, new { returnUrl = Model.ReturnUrl }, FormMethod.Post, new { }))
{ 
    <ol>
        <li>
            <div class="input-icon">
				<i class="fa fa-envelope"></i>
                @Html.TextBoxFor(o => o.Email, new { placeholder = "Email" })
                @Html.ValidationMessageFor(o => o.Email)
			</div>
        </li>

        <li>
            <div class="input-icon">
				<i class="fa fa-lock"></i>
                @Html.PasswordFor(o => o.Password, new { placeholder = "Password" })
                @Html.ValidationMessageFor(o => o.Password)
			</div>
        </li>
                    
        <li class="submit">
            <button type="submit" class="btn primary right">Login</button>
        </li>
    </ol>
}
      