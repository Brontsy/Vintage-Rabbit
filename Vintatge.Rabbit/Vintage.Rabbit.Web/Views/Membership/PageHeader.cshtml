@model Vintage.Rabbit.Web.Models.Membership.PageHeaderViewModel


    <div class="login-register">
        <div class="triangle left"></div>
        <div class="link-container">
            @if (Model.IsLoggedIn)
            {
                <text>@Html.RouteLink(Model.Email, Routes.Membership.Logout)</text>
            }
            else
            {
                <text>@Html.RouteLink("Login", Routes.Membership.Login)&nbsp; / &nbsp;@Html.RouteLink("Register", Routes.Membership.Register)</text>
            }
        </div>
    </div>

    <div class="social">
        <a href="http://www.facebook.com">
            <img src="/content/images/social/facebook.gif" />
        </a>
        <a href="http://www.instagram.com">
            <img src="/content/images/social/instagram.gif" />
        </a>
        <a href="http://www.pinterest.com">
            <img src="/content/images/social/pinterest.gif" />
        </a>
        <a href="mailto:asd@asd.com">
            <img src="/content/images/social/email.gif" />
        </a>
    </div>
