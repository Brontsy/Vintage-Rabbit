<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="/Content/less/site.less" type="text/css" charset="utf-8" />

</head>
<body>

    
    <div class="container-fluid">
    
        <div class="row-fluid">
            
            <div class="span3 offset1">
                <h1>Vintage Ra<span>bb</span>it</h1>
            </div>
            
            <div class="span2 offset1">
                <div id="search">
				    <div class="button-search fa fa-search"></div>
				    <input type="text" name="search" placeholder="Search" value="">
			    </div>
            </div>

            <div class="span3 offset2">
                <div class="shopping-cart">
                    <div class="left">
                        <div class="ribbon">
                            <i class="fa fa-shopping-cart"></i>
                        </div>
                        <div class="arrow"></div>
                    </div>
                    <h4 class="left">Shopping cart</h4>
                </div>
            </div>
            
            <div class="span3 search" style="display: none;">
                <i class="fa fa-search"></i>
                <input type="text" value="Search" />
            </div>

        </div>


        <ol class="nav row-fluid">
            <li class="span2 offset1">
                @Html.RouteLink("Buy", Routes.Buy)
            </li>
            <li class="span2">
                @Html.RouteLink("Hire", Routes.Hire)
            </li>
            <li class="span2">
                @Html.RouteLink("Styles", Routes.Styles)
            </li>
            <li class="span2">
                @Html.RouteLink("Blog", Routes.Blog)
            </li>
            <li class="span2">
                @Html.RouteLink("Contact us", Routes.ContactUs)
            </li>
        </ol>

        @RenderBody()

    </div>

    <!-- scripts -->


</body>
</html>
