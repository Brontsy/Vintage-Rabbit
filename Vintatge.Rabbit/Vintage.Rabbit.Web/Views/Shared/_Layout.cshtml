                                            <div class="col-2 text-right"><input type="text" value="2" /></div>
                                            <div class="col-2 text-right">$15.90</div>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="grid-wrap">
                                            <div class="col-1"><i class="fa fa-times-circle"></i></div>
                                            <div class="col-5">Tall milk bottle</div>
                                            <div class="col-2 text-right">$9.95</div>
                                            <div class="col-2 text-right"><input type="text" value="1" /></div>
                                            <div class="col-2 text-right">9.95</div>
                                        </div>
                                    </li>
                                    <li class="total">
                                        <div class="grid-wrap">
                                            <div class="col-6">&nbsp;</div>
                                            <div class="col-2">&nbsp;</div>
                                            <div class="col-2">Total</div>
                                            <div class="col-2">$25.85</div>
                                        </div>
                                    </li>
                                    <li class="checkout">
                                        <div class="grid-wrap">
                                            <div class="col-5">&nbsp;</div>
                                            <div class="col-7 text-right">
                                                <div href="#" class="btn primary">Proceed to checkout</div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="col-2 col-3-t col-12-m">
                    <div class="login-register">
                        <a href="/login">Login</a>&nbsp; &nbsp; / &nbsp; &nbsp;<a href="/register">Register</a>
                    </div>
                    <div class="social-media">
                        <img src="/content/images/social-media/fb.png" width="24" />
                        <img src="/content/images/social-media/twitter.png" width="24" />
                        <img src="/content/images/social-media/pinterest.png" width="24" />
                        <img src="/content/images/social-media/googleplus.png" width="24" />
                    </div>
                </div>
            </div>
        </div>

        <div class="nav">
            <div class="gutter">
                <ol class="grid-wrap">
                    <li class="col-2 col-12-m offset1">
                        @Html.RouteLink("Hire", Routes.Hire)
                    </li>
                    <li class="col-2 col-12-m">
                        @Html.RouteLink("Style", Routes.Style)
                    </li>
                    <li class="col-2 col-12-m">
                        @Html.RouteLink("Buy", Routes.Buy)
                    </li>
                    <li class="col-2 col-12-m">
                        @Html.RouteLink("Blog", Routes.Blog)
                    </li>
                    <li class="col-2 col-12-m">
                        @Html.RouteLink("Contact us", Routes.ContactUs)
                    </li>
                </ol>
            </div>
        </div>
    
