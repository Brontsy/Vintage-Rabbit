
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="@ViewBag.Keywords" />

    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="/Content/less/site.less" type="text/css" charset="utf-8" />

    <script src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <link href='//fonts.googleapis.com/css?family=Dosis:400,700' rel='stylesheet' type='text/css'>
</head>
<body>


    <header>
        <div class="row">
            <div class="col-5">
                <h1><a href="/">Vintage Rabbit</a></h1>
            </div>

            <div class="col-7">
                <div class="right-header-container">
                    @{Html.RenderAction("PageHeader", "ShoppingCart");}
                    @{Html.RenderAction("PageHeader", "Membership");}


                    <div class="search">
                        @using (Html.BeginRouteForm(Routes.Search.Index, FormMethod.Get, new { }))
                        {
                            <input type="text" class="left" id="query" name="query" placeholder="Search" value="">
                            <div class="submit-container">
                                <div class="triangle left"></div>
                                <button type="submit" class="btn left">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        }
                    </div>
                </div>

                <div class="social">
                    <a href="https://www.facebook.com/vintagerabbitau" target="_blank">
                        <img src="/content/images/social/facebook.gif" />
                    </a>
                    <a href="http://instagram.com/vintagerabbit_au" target="_blank">
                        <img src="/content/images/social/instagram.gif" />
                    </a>
                    <a href="https://www.pinterest.com/vintagerabbitau" target="_blank">
                        <img src="/content/images/social/pinterest.gif" />
                    </a>
                    <a href="https://twitter.com/vinrabbit1" target="_blank" class="twitter">
                        <img src="/content/images/social/twitter.png" />
                    </a>
                </div>

            </div>

        </div>
    </header>

    

        <nav>
            <ol>
                <li>
                    @Html.RouteLink("Hire", Routes.Hire.Index)
                    @{Html.RenderAction("Subnav", "Hire");}
                </li>
                <li>
                    @Html.RouteLink("Themes", Routes.Themes.Index)
                    <ul class="themes-subnav">
                        <li>@Html.RouteLink("Frozen", Routes.Themes.Theme, new { themeName = "frozen" })</li>
                        <li>@Html.RouteLink("Carnival", Routes.Themes.Theme, new { themeName = "carnival" })</li>
                        <li>@Html.RouteLink("Wizard of Oz", Routes.Themes.Theme, new { themeName = "wizard-of-oz" })</li>
                        <li>@Html.RouteLink("Teddy Bears Picnic", Routes.Themes.Theme, new { themeName = "teddy-bears-picnic" })</li>
                        <li>@Html.RouteLink("Tea Party", Routes.Themes.Theme, new { themeName = "tea-party" })</li>
                        <li>@Html.RouteLink("Mary Poppins", Routes.Themes.Theme, new { themeName = "mary-poppins" })</li>
                        <li>@Html.RouteLink("Cinderella", Routes.Themes.Theme, new { themeName = "cinderella" })</li>
                    </ul>
                </li>
                <li>
                    @Html.RouteLink("Party Supplies", Routes.Buy.PartySupplies)
                    @{Html.RenderAction("PartySuppliesSubnav", "Buy");}
                </li>
                <li>
                                  @Html.RouteLink("Gifts", Routes.Buy.Gifts)
                </li>
                <li>
                    @Html.RouteLink("Games", Routes.Buy.Games)
                </li>
                <li>
                    @Html.RouteLink("Blog", Routes.Blog)
                </li>
                <li>
                    @Html.RouteLink("FAQ", Routes.FAQ)
                    <ul class="faq-subnav">
                        <li>@Html.RouteLink("How it works", Routes.HowItWorks)</li>
                        <li>@Html.RouteLink("About us", Routes.AboutUs)</li>
                        <li>@Html.RouteLink("Contact us", Routes.ContactUs)</li>
                        <li>@Html.RouteLink("Terms and conditions", Routes.TermsAndConditions)</li>
                        <li>@Html.RouteLink("Privacy policy", Routes.PrivacyPolicy)</li>
                        <li>@Html.RouteLink("Media and Press", Routes.MediaAndPress)</li>
                        <li>@Html.RouteLink("Suppliers", Routes.Suppliers)</li>
                    </ul>
                </li>
            </ol>
        </nav>

    @RenderBody()





    @{Html.RenderPartial("footer");}


    <!-- scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">

        $('nav > ol > li ul').fadeOut();

        var navTimeout;
        $('nav > ol > li').on('mouseover', function () {

            var $this = $(this);
            navTimeout = setTimeout(function () { $this.addClass('active'); $($this.find('ul')).fadeIn(150); }, 100);
        });

        $('nav > ol > li').on('mouseleave', function () {

            var $this = $(this);
            clearTimeout(navTimeout);
            setTimeout(function () { $this.removeClass('active'); }, 100);
        });

    </script>

